{
  "name": "listion",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently -c \"cyan,magenta\" -n \"frontend,backend\" \"npm run --workspace frontend dev\" \"npm run --workspace backend dev\"",
    "build": "npm run --workspaces build",
    "lint": "npm run --workspaces lint",
    "type-check": "npm run --workspaces type-check",
    "test": "npm run --workspaces test",
    "format": "npm run --workspaces format",
    "prepare": "simple-git-hooks",
    "lint:commits": "commitlint --from=origin/main --to=HEAD || echo \"Hinweis: FÃ¼r lokale Branches ggf. --from anpassen\""
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "concurrently": "^9.2.1",
    "jsdom": "^27.0.0",
    "simple-git-hooks": "^2.9.0"
  },
  "simple-git-hooks": {
    "commit-msg": "commitlint --edit"
  },
  "overrides": {
    "rollup": "^4.24.0"
  }
}
